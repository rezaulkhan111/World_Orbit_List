<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/iv_satellite_photo"
        android:layout_width="111dp"
        android:layout_height="100dp"
        android:contentDescription="@string/R_photo"
        app:srcCompat="@android:drawable/ic_delete" />

    <TextView
        android:id="@+id/tv_satellite_name"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/iv_satellite_photo"
        android:layout_toRightOf="@+id/iv_satellite_photo"
        android:maxLength="20"
        android:maxWidth="150dp"
        android:text="@string/R_name"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/tv_satellite_type"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="13dp"
        android:layout_toEndOf="@+id/iv_satellite_photo"
        android:layout_toRightOf="@+id/iv_satellite_photo"
        android:maxLength="25"
        android:maxWidth="150dp"
        android:text="@string/R_satellite_type"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/tv_launch_date_tag"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_satellite_name"
        android:maxWidth="150dp"
        android:text="@string/R_launch_date"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/tv_launch_date"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_satellite_type"
        android:maxWidth="150dp"
        android:text="@string/R_date"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark" />

</RelativeLayout>